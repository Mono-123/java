<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aliyun.demo.Mapper.GradeMapper">
    <select id="getGrade" parameterType="long" resultType="com.aliyun.demo.Entity.Grade">
        SELECT * FROM grade WHERE id = #{id}
    </select>

    <select id="getGradePagination" resultType="com.aliyun.demo.Entity.Grade">
        SELECT * FROM grade LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert
        id="insertGrade"
        parameterType="com.aliyun.demo.Entity.Grade"
        useGeneratedKeys="true"
        keyProperty="id"
    >
        INSERT INTO grade (grade, manager_id, is_graduated) VALUES (#{Grade.grade}, #{Grade.managerId}, #{Grade.isGraduated})
    </insert>

    <update
        id="updateGraduated"
    >
       UPDATE grade SET is_graduated = 1 WHERE grade = 4
    </update>

    <update
        id="updateGrade"
    >
        UPDATE grade SET grade = grade + 1 WHERE grade&lt;4 
    </update>

    <delete
        id="deleteGrade"
        parameterType="long"
    >
       DELETE FROM grade WHERE id = #{id}
    </delete>

</mapper>