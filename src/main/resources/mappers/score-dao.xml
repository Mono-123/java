<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aliyun.learnjava.dao.ScoreDao">
    <resultMap id="scoreMap" type="com.aliyun.learnjava.entity.Score">
        <id property="id" column="id"></id>
        <result property="studentId" column="student_id"></result>
        <result property="chinese" column="chinese"></result>
        <result property="math" column="math"></result>
        <result property="english" column="english"></result>
    </resultMap>

    <select id="getScore" parameterType="long" resultMap="scoreMap">
        SELECT * FROM score WHERE id = #{id}
    </select>

    <select id="getScorePagination" resultMap="scoreMap">
        SELECT * FROM score LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert
        id="insertScore"
        parameterType="com.aliyun.learnjava.entity.Score"
        useGeneratedKeys="true"
        keyProperty="id"
    >
        INSERT INTO score (student_id,chinese,math,english) VALUES (#{Score.studentId}, #{Score.chinese},#{Score.math},#{Score.english})
    </insert>

    <update
        id="updateChinese"
        parameterType="com.aliyun.learnjava.entity.Score"
    >
        UPDATE score SET student_id = #{score.studentId}, chinese = #{score.chinese},math = #{score.math},english = #{score.english} WHERE id = #{score.id}
    </update>

    <delete
        id="deleteScore"
        parameterType="long"
    >
       DELETE FROM score WHERE id = #{id}
    </delete>

</mapper>