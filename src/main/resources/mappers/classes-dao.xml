<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aliyun.learnjava.dao.ClassesDao">

    <resultMap id="classesMap" type="com.aliyun.learnjava.entity.Classes">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="managerId" column="manager_id"></result>
        <result property="gradeId" column="grade_id"></result>
    </resultMap>

    <select id="getClasses" parameterType="long" resultMap="classesMap">
        SELECT * FROM classes WHERE id = #{id}
    </select>

    <select id="getClassesPagination" resultMap="classesMap">
        SELECT * FROM classes LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert
        id="insertClasses"
        parameterType="com.aliyun.learnjava.entity.Classes"
        useGeneratedKeys="true"
        keyProperty="id"
    >
        INSERT INTO classes (name, manager_id, grade_id) VALUES (#{classes.name}, #{classes.managerId}, #{classes.gradeId})
    </insert>

    <update
        id="updateClasses"
        parameterType="com.aliyun.learnjava.entity.Classes"
    >
        UPDATE classes SET name = #{classes.name}, manager_id = #{classes.managerId},grade_id = #{classes.gradeId}, WHERE id = #{classes.id}
    </update>

    <delete
        id="deleteClasses"
        parameterType="long"
    >
       DELETE FROM classes WHERE id = #{id}
    </delete>

</mapper>