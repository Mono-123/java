<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aliyun.learnjava.dao.TeacherDao">
    <select id="getTeacher" parameterType="long" resultType="com.aliyun.learnjava.entity.Teacher">
        SELECT * FROM teacher WHERE id = #{id}
    </select>

    <select id="getTeacherPagination" resultType="com.aliyun.learnjava.entity.Teacher">
        SELECT * FROM teacher LIMIT #{limit} OFFSET #{offset}
    </select>
    
    <insert
        id="insertTeacher"
        parameterType="com.aliyun.learnjava.entity.Teacher"
        useGeneratedKeys="true"
        keyProperty="id"
    >
        INSERT INTO teacher (name, gender) VALUES (#{teacher.name}, #{teacher.gender})
    </insert>

    <update
        id="updateTeacher"
        parameterType="com.aliyun.learnjava.entity.Teacher"
    >
       UPDATE teacher SET name = #{teacher.name},gender = #{teacher.gender}, WHERE id = #{teacher.id}
    </update>

    <delete
        id="deleteTeacher"
        parameterType="long"
    >
       DELETE FROM teacher WHERE id = #{id}
    </delete>

</mapper>