<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aliyun.learnjava.dao.GradeDao">
        <resultMap id="gradeMap" type="com.aliyun.learnjava.entity.Grade">
        <id property="id" column="id"></id>
        <result property="grade" column="grade"></result>
        <result property="managerId" column="manager_id"></result>
        <result property="isGraduated" column="is_graduated"></result>
    </resultMap>

    <select id="getGrade" parameterType="long" resultMap="gradeMap">
        SELECT * FROM grade WHERE id = #{id}
    </select>

    <select id="getGraduate" resultMap="gradeMap">
        SELECT * FROM grade WHERE Grade = 4 and is_graduated = 0
    </select>

    <select id="getGradePagination" resultMap="gradeMap">
        SELECT * FROM grade LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert
        id="insertGrade"
        parameterType="com.aliyun.learnjava.entity.Grade"
        useGeneratedKeys="true"
        keyProperty="id"
    >
        INSERT INTO grade (grade, manager_id, is_graduated) VALUES (#{grade.grade}, #{grade.managerId}, #{grade.isGraduated})
    </insert>

    <update
        id="updateGraduate"
    >
       UPDATE grade SET is_graduated = 1 WHERE grade = 4
    </update>

    <update
        id="updateGrade"
        parameterType="com.aliyun.learnjava.entity.Grade"
    >
        UPDATE grade SET grade = #{grade.grade}, manager_id = #{grade.managerId},  is_graduated = #{grade.isGraduated} WHERE id = #{grade.id}
    </update>

    <delete
        id="deleteGrade"
        parameterType="long"
    >
       DELETE FROM grade WHERE id = #{id}
    </delete>

</mapper>