<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper gradespace="com.aliyun.learnjava.dao.GradeDao">
    <select id="getGrade" parameterType="long" resultType="com.aliyun.learnjava.entity.Grade">
        SELECT * FROM grade WHERE id = #{id}
    </select>

    <select id="getGradePagination" resultType="com.aliyun.learnjava.entity.Grade">
        SELECT * FROM grade LIMIT #{limit} OFFSET #{offset}
    </select>

    <insert
        id="insertGrade"
        parameterType="com.aliyun.learnjava.entity.Grade"
        useGeneratedKeys="true"
        keyProperty="id"
    >
        INSERT INTO grade (grade, manager_id, is_graduated) VALUES (#{Grade.grade}, #{Grade.managerId}, #{Grade.isGraduated})
    </insert>

    <update
        id="updateGrade"
        parameterType="com.aliyun.learnjava.entity.Grade"
    >
        UPDATE grade SET grade = #{grade.grade}, manager_id = #{grade.managerId},  is_graduated = #{grade.isGraduated} WHERE id = #{grade.id}
    </update>

    <delete
        id="deleteGrade"
        parameterType="long"
    >
       DELETE FROM grade WHERE id = #{id}
    </delete>

</mapper>